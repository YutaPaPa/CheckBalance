<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.masayuki.checkbalance.MainActivity">

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="499dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="6dp">

        <EditText
            android:id="@+id/editTextEdy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="right"
            android:inputType="number"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignRight="@+id/editTextDate"
            android:layout_alignEnd="@+id/editTextDate" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/edy1"
            android:layout_above="@+id/editTextSuica"
            android:layout_toLeftOf="@+id/button"
            android:layout_toStartOf="@+id/button"
            android:layout_marginBottom="37dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="登録" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/suica"
            android:layout_above="@+id/imageView4"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginBottom="17dp" />

        <EditText
            android:id="@+id/editTextSuica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignEnd="@+id/editTextEdy"
            android:layout_alignLeft="@+id/editTextEdy"
            android:layout_alignRight="@+id/editTextEdy"
            android:layout_alignStart="@+id/editTextEdy"
            android:ems="10"
            android:gravity="right"
            android:inputType="number"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4"
            app:srcCompat="@drawable/bunkado" />

        <EditText
            android:id="@+id/editTextBunkadou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignEnd="@+id/editTextSuica"
            android:layout_alignLeft="@+id/editTextSuica"
            android:layout_alignRight="@+id/editTextSuica"
            android:layout_alignStart="@+id/editTextSuica"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:gravity="right"
            android:inputType="number"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextBunkadou"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_marginBottom="31dp"
            app:srcCompat="@drawable/s_pasumo1" />

        <EditText
            android:id="@+id/editTextPasumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="right"
            android:inputType="number"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignLeft="@+id/editTextBunkadou"
            android:layout_alignStart="@+id/editTextBunkadou"
            android:layout_alignRight="@+id/editTextBunkadou"
            android:layout_alignEnd="@+id/editTextBunkadou" />

        <EditText
            android:id="@+id/editTextNFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:layout_below="@+id/editTextDate"
            android:layout_alignLeft="@+id/editTextDate"
            android:layout_alignStart="@+id/editTextDate" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
